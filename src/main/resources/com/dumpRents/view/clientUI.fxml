<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="452.0" prefWidth="601.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dumpRents.controller.ClientUIController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="CLIENTE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Informações pessoais">
               <font>
                  <Font name="Annapurna SIL Bold" size="20.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <Label text="Nome:" />
                  <TextField fx:id="txtName" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="CPF:" />
                  <TextField fx:id="txtCpf" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label text="Contato">
               <font>
                  <Font name="Annapurna SIL Bold" size="20.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <Label text="Telefone 1:" />
                  <TextField fx:id="txtTelephone1" HBox.hgrow="ALWAYS" />
                  <Label text="Telefone 2:" />
                  <TextField fx:id="txtTelephone2" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Emails (separar por vírgula):" />
                  <TextArea fx:id="txtEmails" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label text="Endereço">
               <font>
                  <Font name="Annapurna SIL Bold" size="20.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <Label text="Cidade:" />
                  <TextField fx:id="txtCity" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Distrito:" />
                  <TextField fx:id="txtDistrict" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Rua:" />
                  <TextField fx:id="txtStreet" HBox.hgrow="ALWAYS" />
                  <Label text="Número:" />
                  <TextField fx:id="txtNumber" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="CEP:" />
                  <TextField fx:id="txtCep" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="55.0" prefWidth="581.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSaveOrUpdate" onAction="#saveOrUpdate" text="Salvar" />
                  <Button fx:id="btnCancel" onAction="#backToPreviousScene" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
